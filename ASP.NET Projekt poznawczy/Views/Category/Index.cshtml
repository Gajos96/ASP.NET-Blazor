@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
             <h2 class="text-primary">Lista Kategori</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Add New Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-dark" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th style="text-align:center">
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td style="padding-top:20px">
                    @obj.Name 
                </td>
            <td width="8%" style="padding-top:20px">
                    @obj.DisplayOrder
                </td>
                <td width="30%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-4" style="width:120px;text-align:center"><i class="bi bi-pencil">Edit</i></a>
                        <a asp-controller="Category" asp-action="DeletePost" asp-route-id="@obj.Id" class="btn btn-danger mx-4" style="width:140px;text-align:center"><i class="bi bi-trash"></i>Delete</a>
                        @*asp-route-id => głupie to*@
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>