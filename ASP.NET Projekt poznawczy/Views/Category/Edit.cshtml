@model Category
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-bg-primary">Edytuj Kategorie</h2>
            </hr>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" style="width:50%" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" style="width:50%" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;margin:10px 10px 10px 0">Modyfikuj</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px;margin:10px 0 10px 0px">Powrót</a>

    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}